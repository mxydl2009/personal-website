<link rel="stylesheet" href="css/home.css">
<div class="site-inner">
    <main>
        <h1>welcome to my world</h1>
        <div>
                <div id="homePics" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#homePics" data-slide-to="0" class="active"></li>
                        <li data-target="#homePics" data-slide-to="1"></li>
                    </ol>

            <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="images/home/web_development_mobile.jpg" 
                            srcset="images/home/web_development_mobile.jpg 300w, images/home/web_development.jpg 800w"
                            sizes="(max-width: 768px) calc(80vw), (min-width: 768px) calc(80vw)"
                            alt="web开发">
                        </div>
                        <div class="item">
                            <img src="images/home/personalPic_mobile.jpg" 
                            srcset="images/home/personalPic_mobile.jpg 300w, images/home/personalPic.jpg 800w"
                            sizes="(max-width: 768px) calc(80vw), (min-width: 768px) calc(80vw)"
                            alt="个人照片">
                        </div>
                    </div>

            <!-- Controls -->
                    <a class="left carousel-control" href="#homePics" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#homePics" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div>

                </div>
        </div> 
    </main>
    <aside class="sidebar">
        <section class="intro">
            <div class="intro-title">
                <h4>HELLO</h4>
            </div>
            <div class="intro-container">
                <div class="self-pic">
                    <img src="images/home/introPic.jpg"
                    alt="个人照片">
                </div>
                <div class="about-me">
                    <a href="/hobby"><span>About me</span></a>
                </div>
            </div>
        </section>
        <section class="intro">
            <div class="intro-title">
                <h4>新浪微博</h4>
            </div>
            <div class="intro-container">
                <h4 class="weibo-header">微博<span class="weibo-byline">by<a href="https://weibo.com/u/2524789911" title="原头笨脑的微博">@原头笨脑</a></span></h4>
                <div class="weibo-container">
                    <ul class="weibo-list list-unstyled">
                        {{#each weibos}}
                        <li>{{> blog}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>

        </section>
    </aside>

</div>

